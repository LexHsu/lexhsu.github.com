---
permalink: /feed/index.xml
---

<?xml version="1.0" encoding="utf-8"?>

<feed xmlns="http://www.w3.org/2005/Atom">
  <title>{{ site.name }}</title>
  <subtitle>{{ site.slogan }}</subtitle>
  <id>tag:{{ site.domain }},2005:/</id>
  <link rel="self" type="application/atom+xml" href="{{ site.url }}{{ site.base }}/{{ site.feed }}/" />
  <link rel="alternate" type="text/html" href="{{ site.url }}{{ site.base }}/" />
  <updated>{{ site.time | date_to_xmlschema }}</updated>
  <rights>Copyright Â© {{ site.time | date: "%Y" }}, {{ site.user }}</rights>

  <author>
    <name>{{ site.user }}</name>
    <email>{{ site.email }}</email>
  </author>

  {% for post in site.posts limit:300 %}
    <entry>
      <title>{{ post.title | strip_html | xml_escape }}</title>
      <id>tag:{{ site.domain }}{{ site.base }},{{ post.date | date: "%Y" }}:{{ post.id }}/</id>
      <link rel="alternate" type="text/html" href="{% if post.link %}{{ post.link }}{% else %}{{ site.url }}{{ site.base }}{{ post.url }}/{% endif %}" />
      <updated>{{ post.date | date_to_xmlschema }}</updated>
      <author>
        <name>{{ site.user }}</name>
        <uri>{{ site.url }}{{ site.base }}/</uri>
      </author>
      <content type="html" xml:base="{{ site.url }}{{ site.base }}/">
        {% if post.thumb %}
          &lt;img src=&quot;{{ site.file }}/thumb/{{ post.thumb }}&quot; alt=&quot;{{ post.title | strip_html | xml_escape }}&quot; width=&quot;500&quot;&gt;
        {% endif %}
        {% if post.excerpt %}
          &lt;p&gt;{{ post.excerpt | xml_escape }}&lt;/p&gt;
        {% else %}
          {{ post.content | xml_escape }}
        {% endif %}
        {% if post.link %}
          &lt;p&gt;&lt;a href=&quot;{{ site.url }}{{ site.base }}{{ post.url }}/&quot; title=&quot;Permalink to &#8216;{{ post.title | strip_html | xml_escape }}&#8217;&quot;>&#9650;&lt;/a&gt;&lt;/p&gt;
        {% endif %}
      </content>
    </entry>
  {% endfor %}
</feed>